---
import { MAPS_EMBED_URL } from '../../consts';

interface Props {
  src?: string;
  title?: string;
  className?: string;
}

const {
  src = MAPS_EMBED_URL,
  title = 'Google Maps',
  className = '',
} = Astro.props;
---

<div class:list={['h-64 md:h-80 w-full rounded-2xl overflow-hidden border border-white/10 map-dark', className]}>
  <style>
    .map-dark {
      filter: brightness(0.6) contrast(1.1) saturate(0) invert(1) hue-rotate(180deg);
    }
    .map-dark:hover {
      filter: brightness(0.65) contrast(1.1) saturate(0) invert(1) hue-rotate(180deg);
    }
  </style>
  <iframe
    src={src}
    title={title}
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
  ></iframe>
</div>
