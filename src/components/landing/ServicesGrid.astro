---
import { loadImagesManifest } from '../../utils/imagesManifest';
import { buildImageAlt, getCategoryLabel } from '../../utils/imageSeo';
import { getServiceLabel } from '../../config/serviceLabels';

interface Props {
  lang?: string;
}
const { lang = 'tr' } = Astro.props;

// Read manifest to get categories and representative images
let categories = [];

try {
  const manifest = loadImagesManifest();

  // Group by category
  const groups: Record<string, any> = {};
  manifest.forEach((item: any) => {
    if (!groups[item.category]) {
      groups[item.category] = item; // Take first one as representative
    }
  });

  categories = Object.values(groups);
} catch (e) {
  console.error('Could not read image manifest:', e);
}

const text = {
  tr: {
    heading: { first: 'Hizmet', second: 'lerimiz', joiner: '' },
    subtitle: 'Her ihtiyaca uygun kaliteli üretim.',
    view: 'İncele →',
    categorySubtitle: 'Çözümleri',
  },
  en: {
    heading: { first: 'Our', second: 'Services', joiner: ' ' },
    subtitle: 'Quality production for every need.',
    view: 'View Details →',
    categorySubtitle: 'Solutions',
  },
  ar: {
    heading: { first: 'خدماتنا', second: '', joiner: '' },
    subtitle: 'إنتاج احترافي يلائم احتياجات علامتك في إسطنبول.',
    view: 'عرض التفاصيل ←',
    categorySubtitle: 'حلول',
  },
};

const t = lang === 'ar' ? text.ar : lang === 'en' ? text.en : text.tr;
const altLang = lang === 'ar' ? 'ar' : lang === 'en' ? 'en' : 'tr';
const linkBase = lang === 'ar' ? '/ar/services/' : lang === 'en' ? '/en/services/' : '/hizmetler/';
const subtitleClass = lang === 'ar' ? 'border-r-2 pr-4 text-right' : 'border-l-2 pl-4';
const priorityOrder = ['cati-tabelasi', 'cephe-tabela', 'isikli-isiksiz-tabelalar'];

const getDisplayLabel = (category: string) => {
  const mapped = getServiceLabel(category, altLang as 'tr' | 'en' | 'ar');
  if (mapped) {
    return mapped.toUpperCase();
  }
  return getCategoryLabel(category, altLang).toUpperCase();
};

// SEO microcopy for each service (TR/EN/AR)
const serviceMicrocopy: Record<string, { tr: string; en: string; ar: string }> = {
  'cati-tabelasi': {
    tr: 'İstanbul genelinde çatı tabelası imalatı ve montajı. Beşiktaş, Kadıköy ve Kağıthane\'de hızlı hizmet.',
    en: 'Rooftop signage manufacturing across Istanbul. Fast service in Beşiktaş, Kadıköy and Kağıthane.',
    ar: 'تصنيع وتركيب لافتات السطح في إسطنبول. خدمة سريعة في بشيكتاش وكاديكوي وكاغيثانة.',
  },
  'cephe-tabela': {
    tr: 'Premium cephe tabelası üretimi. İstanbul\'un 40 ilçesinde profesyonel montaj hizmeti.',
    en: 'Premium facade signage production. Professional installation across 40 districts in Istanbul.',
    ar: 'إنتاج لافتات واجهات متميزة. خدمة تركيب احترافية في 40 منطقة بإسطنبول.',
  },
  'isikli-isiksiz-tabelalar': {
    tr: 'LED ve neon tabela çözümleri. Enerji tasarruflu ışıklı tabela sistemleri, İstanbul teslim.',
    en: 'LED and neon signage solutions. Energy-efficient illuminated signs, delivered across Istanbul.',
    ar: 'حلول لافتات LED ونيون. أنظمة لافتات مضيئة موفرة للطاقة، تسليم في إسطنبول.',
  },
  'paslanmaz-harfler': {
    tr: 'Paslanmaz harf tabela imalatı. Plaza ve kurumsal binalar için dayanıklı çözümler.',
    en: 'Stainless steel letter manufacturing. Durable solutions for plazas and corporate buildings.',
    ar: 'تصنيع حروف ستانلس ستيل. حلول متينة للأبراج والمباني المؤسسية.',
  },
  'totem': {
    tr: 'Totem tabela üretimi ve kurulumu. AVM, plaza ve işletmeler için öne çıkan totem sistemleri.',
    en: 'Totem signage production and installation. Standout totem systems for malls, plazas and businesses.',
    ar: 'إنتاج وتركيب لوحات التوتم. أنظمة توتم بارزة للمولات والأبراج والأعمال.',
  },
  'arac-giydirme': {
    tr: 'Profesyonel araç giydirme hizmeti. Reklam tabelası görselliğini taşıyan filosuna taşıyın.',
    en: 'Professional vehicle wrapping service. Bring signage visibility to your fleet.',
    ar: 'خدمة تغليف مركبات احترافية. اجلب ظهور اللافتات إلى أسطولك.',
  },
  'fener-tabela': {
    tr: 'Fener tabela imalatı. Dar sokaklar için ideal çift taraflı görünürlük.',
    en: 'Blade sign manufacturing. Ideal double-sided visibility for narrow streets.',
    ar: 'تصنيع لافتات جانبية. رؤية مزدوجة مثالية للشوارع الضيقة.',
  },
  'kabartma-pleksiglass': {
    tr: 'Kabartma pleksi harf üretimi. Modern ofis ve mağazalar için şık detay.',
    en: 'Raised acrylic letter production. Elegant detail for modern offices and stores.',
    ar: 'إنتاج حروف أكريليك بارزة. تفاصيل أنيقة للمكاتب والمتاجر الحديثة.',
  },
};

const getServiceDescription = (category: string) => {
  const desc = serviceMicrocopy[category];
  if (!desc) {
    // Fallback generic description
    return lang === 'en'
      ? 'Professional signage solutions in Istanbul with full service support.'
      : lang === 'ar'
      ? 'حلول لافتات احترافية في إسطنبول مع دعم خدمة كامل.'
      : 'İstanbul genelinde profesyonel tabela çözümleri ve tam hizmet desteği.';
  }
  return lang === 'ar' ? desc.ar : lang === 'en' ? desc.en : desc.tr;
};

categories = categories.sort((a: any, b: any) => {
  const aIndex = priorityOrder.indexOf(a.category);
  const bIndex = priorityOrder.indexOf(b.category);
  if (aIndex !== -1 || bIndex !== -1) {
    return (aIndex === -1 ? 99 : aIndex) - (bIndex === -1 ? 99 : bIndex);
  }
  return getDisplayLabel(a.category).localeCompare(getDisplayLabel(b.category), altLang);
});
---

<section class="py-24 bg-secondary text-white relative overflow-hidden">
  <!-- Subtle background glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16">
      <h2 class="font-heading font-black text-4xl md:text-5xl mb-4 text-white uppercase tracking-tight">
        <span class="text-primary">{t.heading.first}</span>
        {t.heading.second ? `${t.heading.joiner}${t.heading.second}` : ''}
      </h2>
      <p class:list={['text-gray-400 max-w-2xl mx-auto text-lg inline-block', subtitleClass]}>
        {t.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((cat: any) => (
        <a href={`${linkBase}${cat.category}/`} class="group block glass-card overflow-hidden hover:shadow-primary/30 transition-all duration-300 transform hover:-translate-y-2 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-secondary">
          <!-- Image Container -->
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src={cat.paths['960']}
              alt={buildImageAlt({ category: cat.category, lang: altLang })}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent group-hover:from-primary/20 transition-all duration-300"></div>
          </div>
          <!-- Content Below Image -->
          <div class="p-6">
            <h3 class="font-heading font-bold text-xl md:text-2xl text-heading mb-2 group-hover:text-primary transition-colors line-clamp-2">
              {getDisplayLabel(cat.category)}
            </h3>
            <p class="text-sm text-gray-400 leading-relaxed mb-4 line-clamp-2">
              {getServiceDescription(cat.category)}
            </p>
            <span class="text-sm text-primary group-hover:text-primary-hover font-semibold inline-flex items-center gap-1 transition-colors">
              {t.view}
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
