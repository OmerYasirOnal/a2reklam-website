---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/landing/Hero.astro';
import ServicesGrid from '../components/landing/ServicesGrid.astro';
import KPISection from '../components/landing/KPISection.astro';
import ReviewsSection from '../components/landing/ReviewsSection.astro';
import GallerySlider from '../components/landing/GallerySlider.astro';
import ClientLogos from '../components/common/ClientLogos.astro';
import TabelaRehberiPreview from '../components/landing/TabelaRehberiPreview.astro';
---

<Layout title="A2 Reklam - İstanbul Tabela ve Reklam Çözümleri">
	<Hero lang="tr" />
  <ServicesGrid lang="tr" />
  <KPISection lang="tr" />
  <ReviewsSection lang="tr" />
  <TabelaRehberiPreview lang="tr" />
  <GallerySlider lang="tr" />

  <!-- Client Logos Section -->
  <ClientLogos lang="tr" />

  <!-- Trust/Stats Section -->
  <section class="py-20 bg-secondary border-t border-white/5 relative">
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/5 hover:border-primary/50 transition-all group">
          <span class="block text-4xl font-heading font-black text-primary mb-2 group-hover:scale-110 transition-transform duration-300">Kurumsal</span>
          <span class="text-gray-400 text-sm font-medium uppercase tracking-wider group-hover:text-white transition-colors">B2B Odaklı Üretim</span>
        </div>
        <div class="p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/5 hover:border-primary/50 transition-all group">
          <span class="block text-4xl font-heading font-black text-primary mb-2 group-hover:scale-110 transition-transform duration-300">Uçtan Uca</span>
          <span class="text-gray-400 text-sm font-medium uppercase tracking-wider group-hover:text-white transition-colors">Keşiften Montaja</span>
        </div>
        <div class="p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/5 hover:border-primary/50 transition-all group">
          <span class="block text-4xl font-heading font-black text-primary mb-2 group-hover:scale-110 transition-transform duration-300">İstanbul</span>
          <span class="text-gray-400 text-sm font-medium uppercase tracking-wider group-hover:text-white transition-colors">Şehir Geneli Hizmet</span>
        </div>
        <div class="p-6 rounded-2xl bg-white/5 backdrop-blur-sm border border-white/5 hover:border-primary/50 transition-all group">
          <span class="block text-4xl font-heading font-black text-primary mb-2 group-hover:scale-110 transition-transform duration-300">Kalite</span>
          <span class="text-gray-400 text-sm font-medium uppercase tracking-wider group-hover:text-white transition-colors">Malzeme ve İşçilik</span>
        </div>
      </div>
    </div>
  </section>

</Layout>

