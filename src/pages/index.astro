---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/landing/Hero.astro';
import ServicesGrid from '../components/landing/ServicesGrid.astro';
---

<Layout title="A2 Reklam - İstanbul Tabela ve Reklam Çözümleri">
	<Hero lang="tr" />
  <ServicesGrid lang="tr" />
  
  <!-- Trust/Stats Section Placeholder -->
  <section class="py-16 bg-white border-t border-gray-100">
    <div class="container mx-auto px-4 text-center">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">10+</span>
          <span class="text-gray-500 text-sm">Yıl Tecrübe</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">1200+</span>
          <span class="text-gray-500 text-sm">Mutlu Müşteri</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">2500+</span>
          <span class="text-gray-500 text-sm">Tamamlanan Proje</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">100%</span>
          <span class="text-gray-500 text-sm">Müşteri Memnuniyeti</span>
        </div>
      </div>
    </div>
  </section>

</Layout>
