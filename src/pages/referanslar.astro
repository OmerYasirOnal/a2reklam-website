---
import Layout from '../layouts/Layout.astro';
import { loadImagesManifest } from '../utils/imagesManifest';
import { buildImageAlt } from '../utils/imageSeo';
import { REFERENCES } from '../data/references';

const manifest = loadImagesManifest();
const categories = [];
const seen = new Set();

manifest.forEach(img => {
  if (!seen.has(img.category)) {
    categories.push({
      category: img.category,
      category_tr: img.category_tr,
      category_en: img.category_en,
      sampleImage: img.paths['960'],
      sampleAlt: buildImageAlt({ category: img.category, lang: 'tr' }),
      count: manifest.filter(i => i.category === img.category).length
    });
    seen.add(img.category);
  }
});

const title = "Referanslarımız | A2 Reklam Portfolyo";
const description = "Tamamladığımız tabela ve reklam projelerimizi inceleyin. Işıklı tabela, totem, kutu harf ve daha fazlası.";
const references = REFERENCES ?? [];
const siteUrl = Astro.site?.href || 'https://a2reklam.com.tr/';
const referencesJsonLd = references.map((reference, index) => ({
  '@type': 'ListItem',
  position: index + 1,
  item: {
    '@type': 'Organization',
    name: reference.name,
    ...(reference.url ? { url: reference.url } : {}),
    ...(reference.logo ? { logo: new URL(reference.logo, siteUrl).toString() } : {}),
  },
}));
---

<Layout title={title} description={description} lang="tr">
  <script type="application/ld+json">
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'ItemList',
      name: 'A2 Reklam Referansları',
      itemListElement: referencesJsonLd,
    })}
  </script>

  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          PROJE <span class="text-primary">REFERANSLARI</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          Farklı sektörlerde tamamladığımız tabela ve reklam projelerinden seçilmiş örnekleri inceleyin.
        </p>
      </div>

      {references.length > 0 && (
        <div class="glass-card p-8 md:p-10 mb-16">
          <div class="text-center mb-8">
            <h2 class="font-heading font-black text-3xl md:text-4xl text-white uppercase tracking-tight">
              ÇALIŞTIĞIMIZ <span class="text-primary">MARKALAR</span>
            </h2>
            <p class="text-gray-400 mt-3 text-sm max-w-2xl mx-auto">
              Kurumsal üretim ve uygulamalarda tercih edilen, düzenli iş birliği yürüttüğümüz referanslar.
            </p>
          </div>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {references.map((reference) => (
              <div class="glass-card group relative overflow-hidden">
                <div class="aspect-[3/2] flex items-center justify-center p-6">
                  {reference.logo ? (
                    <img
                      src={reference.logo}
                      alt={`${reference.name} logo`}
                      width="200"
                      height="80"
                      decoding="async"
                      class="max-w-full max-h-full object-contain opacity-85 grayscale group-hover:opacity-100 group-hover:grayscale-0 transition-all duration-500"
                      loading="lazy"
                    />
                  ) : (
                    <div class="text-center" role="img" aria-label={`${reference.name} logo`}>
                      <div class="text-gray-300 font-heading font-bold text-xs md:text-sm uppercase tracking-wide group-hover:text-white transition-colors">
                        {reference.name}
                      </div>
                    </div>
                  )}
                </div>
                {reference.url && (
                  <div class="absolute inset-0 bg-secondary/90 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                    <a
                      href={reference.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-primary hover:text-white text-xs font-bold uppercase tracking-wider"
                    >
                      Siteyi Ziyaret Et →
                    </a>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )}

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map(cat => (
          <a href={`/hizmetler/${cat.category}/`} class="group relative block bg-accent-light rounded-2xl overflow-hidden border border-white/5 shadow-2xl transition-all hover:border-primary/50">
            <div class="aspect-video overflow-hidden">
              <img src={cat.sampleImage} alt={cat.sampleAlt} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 opacity-80" />
              <div class="absolute inset-0 bg-gradient-to-t from-secondary via-secondary/20 to-transparent"></div>
            </div>
            <div class="p-8 relative">
              <div class="flex justify-between items-center mb-2">
                <h2 class="text-white font-bold text-2xl group-hover:text-primary transition-colors">{cat.category_tr}</h2>
                <span class="text-primary font-black text-sm">{cat.count} Görsel</span>
              </div>
              <p class="text-gray-400 text-sm mb-6">Bu kategorideki tüm projelerimizi ve uygulama çeşitlerimizi inceleyin.</p>
              <div class="text-primary text-xs font-bold uppercase tracking-widest flex items-center gap-2">
                GALERİYE GİT
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
