---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const districts = await getCollection('districts');
// Sort districts alphabetically
const sortedDistricts = districts.sort((a, b) => a.data.districtName.localeCompare(b.data.districtName, 'tr'));

const title = "Hizmet Bölgelerimiz | A2 Reklam";
const description = "İstanbul'un tüm ilçelerinde tabela ve reklam hizmetleri sunuyoruz. Hizmet verdiğimiz bölgeleri inceleyin.";
---

<Layout title={title} description={description} lang="tr">
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          HİZMET <span class="text-primary">BÖLGELERİMİZ</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          İstanbul'un 39 ilçesinde, uzman ekibimizle profesyonel tabela ve reklam çözümleri sunuyoruz.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {sortedDistricts.map(d => (
          <a href={`/hizmet-bolgeleri/${d.slug}/`} class="group p-6 bg-accent-light border border-white/5 rounded-xl hover:border-primary/50 transition-all transform hover:-translate-y-1 text-center">
            <span class="block text-lg font-bold text-gray-300 group-hover:text-primary transition-colors">{d.data.districtName}</span>
            <span class="text-xs text-gray-500 uppercase tracking-widest mt-1 block group-hover:text-gray-400">Tabela Hizmetleri</span>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
