---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { PHONE_TEL } from '../../consts';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();

const title = `${post.data.title} | A2 Reklam Blog`;
const breadcrumbs = [
  { name: 'Anasayfa', item: '/' },
  { name: 'Blog', item: '/blog/' },
  { name: post.data.title, item: `/blog/${post.slug}/` },
];
---

<Layout
  title={title}
  description={post.data.description}
  lang="tr"
  image={post.data.heroImage}
  article={true}
  breadcrumbs={breadcrumbs}
>
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="mb-12">
          <ul class="flex gap-2 text-xs text-gray-500 font-bold uppercase tracking-widest mb-6 border-l-2 border-primary pl-4">
            <li><a href="/" class="hover:text-primary transition-colors">Anasayfa</a></li>
            <li>/</li>
            <li><a href="/blog/" class="hover:text-primary transition-colors">Blog</a></li>
            <li>/</li>
            <li class="text-white">{post.data.title}</li>
          </ul>
          <h1 class="font-heading font-black text-4xl md:text-5xl lg:text-6xl text-white mb-8 leading-tight">
            {post.data.title}
          </h1>
          <div class="flex items-center gap-6 text-sm text-gray-400 border-y border-white/5 py-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              {post.data.pubDate.toLocaleDateString('tr-TR')}
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
              A2 Reklam Ekibi
            </div>
          </div>
        </div>

        <div class="relative rounded-3xl overflow-hidden mb-16 shadow-2xl border border-white/5">
          <img src={post.data.heroImage} alt={post.data.title} class="w-full h-auto" />
        </div>

        <div class="prose prose-lg prose-invert max-w-none prose-headings:font-heading prose-headings:font-bold prose-a:text-primary prose-strong:text-white prose-p:text-gray-400">
          <Content />
        </div>

        <div class="mt-20 pt-12 border-t border-white/5">
          <div class="flex flex-wrap gap-2">
            {post.data.tags && post.data.tags.map(tag => (
              <span class="bg-accent-light text-gray-400 text-[10px] font-bold px-4 py-2 rounded-full uppercase tracking-widest border border-white/5">
                #{tag}
              </span>
            ))}
          </div>
        </div>

        <!-- Sidebar / CTA inside post -->
        <div class="mt-20 p-12 bg-accent-light rounded-3xl border border-white/5 text-center relative overflow-hidden group">
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
          <h3 class="font-heading font-bold text-3xl text-white mb-6 relative z-10">Markanız İçin Profesyonel Bir Dokunuş</h3>
          <p class="text-gray-400 mb-8 max-w-xl mx-auto relative z-10">
            Tüm tabela ve reklam ihtiyaçlarınız için uzman ekibimizle yanınızdayız. Ücretsiz keşif avantajından yararlanmak için hemen iletişime geçin.
          </p>
          <div class="flex flex-col md:flex-row justify-center gap-4 relative z-10">
            <a href="/teklif-al/" class="bg-primary text-secondary font-black py-4 px-10 rounded-lg hover:bg-white transition-all transform hover:-translate-y-1 shadow-lg shadow-primary/20 uppercase tracking-widest text-sm">
              TEKLİF AL
            </a>
            <a href={`tel:${PHONE_TEL}`} class="border border-white/20 hover:border-white text-white font-bold py-4 px-10 rounded-lg transition-all text-sm uppercase tracking-widest">
              BİZİ ARAYIN
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
