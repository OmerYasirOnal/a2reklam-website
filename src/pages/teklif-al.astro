---
import Layout from '../layouts/Layout.astro';
import { EMAIL, PHONE_NUMBER, PHONE_TEL, WHATSAPP_LINK } from '../consts';
import { SERVICE_LABELS, getServiceLabel } from '../config/serviceLabels';

const title = "Hızlı Teklif Al | A2 Reklam";
const description = "Projeniz için ücretsiz keşif ve fiyat teklifi alın. Tabela, reklam ve dijital baskı çözümlerimiz için formu doldurmanız yeterli.";
const formEndpoint = import.meta.env.PUBLIC_FORM_ENDPOINT ?? '';
const hasEndpoint = Boolean(formEndpoint);
const formAction = hasEndpoint ? formEndpoint : `mailto:${EMAIL}`;
const redirectUrl = Astro.site ? new URL('/teşekkürler/', Astro.site).toString() : '/teşekkürler/';
---

<Layout title={title} description={description} lang="tr">
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          HIZLI <span class="text-primary">TEKLİF AL</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block text-balance">
          Hayalinizdeki tabelayı gerçeğe dönüştürelim. Formu doldurun, sizin için en uygun maliyet ve tasarım çalışmasını hazırlayalım.
        </p>
      </div>

      <div class="max-w-3xl mx-auto bg-accent-light p-8 md:p-12 rounded-3xl border border-white/5 shadow-2xl relative">
        <div class="absolute -top-6 -right-6 w-24 h-24 bg-primary/20 rounded-full blur-2xl"></div>

        {!hasEndpoint && (
          <div class="mb-8 border border-primary/30 bg-secondary/70 rounded-2xl p-5 text-sm text-gray-300">
            Form altyapısı henüz aktif değil. Bu sırada <a href={`mailto:${EMAIL}`} class="text-primary hover:underline">e-posta</a> veya <a href={WHATSAPP_LINK} data-track="lead-click" data-lead-type="whatsapp" data-lang="tr" class="text-primary hover:underline">WhatsApp</a> üzerinden hızlıca ulaşabilirsiniz.
            <div class="mt-3 flex flex-wrap gap-3">
              <a href={`tel:${PHONE_TEL}`} data-track="lead-click" data-lead-type="call" data-lang="tr" class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">Ara: {PHONE_NUMBER}</a>
              <a href={`mailto:${EMAIL}`} class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">E-posta</a>
              <a href={WHATSAPP_LINK} data-track="lead-click" data-lead-type="whatsapp" data-lang="tr" class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">WhatsApp</a>
            </div>
          </div>
        )}
        
        <form class="space-y-8 relative z-10" data-track="lead-submit" data-lead-type="quote" data-lang="tr" action={formAction} method="POST" enctype={hasEndpoint ? 'application/x-www-form-urlencoded' : 'text/plain'}>
          {hasEndpoint && <input type="hidden" name="_redirect" value={redirectUrl} />}
          {hasEndpoint && <input type="hidden" name="_subject" value="Yeni teklif talebi" />}

          <div class="space-y-6">
            <h2 class="text-white font-bold text-xl flex items-center gap-3">
              <span class="w-8 h-8 rounded-full bg-primary text-secondary flex items-center justify-center text-sm">1</span>
              İletişim Bilgileri
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="full-name" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Ad Soyad</label>
                <input id="full-name" name="fullName" type="text" autocomplete="name" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Ad Soyad" required />
              </div>
              <div>
                <label for="phone" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Telefon</label>
                <input id="phone" name="phone" type="tel" autocomplete="tel" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="05XX XXX XX XX" required />
              </div>
            </div>
            <div>
              <label for="email" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">E-posta</label>
              <input id="email" name="email" type="email" autocomplete="email" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="E-posta Adresi" required />
            </div>
          </div>

          <div class="space-y-6">
            <h2 class="text-white font-bold text-xl flex items-center gap-3">
              <span class="w-8 h-8 rounded-full bg-primary text-secondary flex items-center justify-center text-sm">2</span>
              Proje Detayları
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="service" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Hizmet Türü</label>
                <select id="service" name="serviceType" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" required>
                  <option value="">Hizmet Seçiniz</option>
                  {Object.keys(SERVICE_LABELS).map((slug) => (
                    <option value={slug}>{getServiceLabel(slug as keyof typeof SERVICE_LABELS, 'tr')}</option>
                  ))}
                  <option value="diger">Diğer</option>
                </select>
              </div>
              <div>
                <label for="dimensions" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Yaklaşık Ölçü</label>
                <input id="dimensions" name="dimensions" type="text" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Yaklaşık Ölçüler (örn: 200x50cm)" />
              </div>
            </div>
            <div>
              <label for="details" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Ek Detaylar</label>
              <textarea id="details" name="details" rows="4" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="İstediğiniz tabela hakkında ek detaylar (renk, aydınlatma türü vb.)" required></textarea>
            </div>
          </div>

          <div class="pt-4">
            <button type="submit" class="w-full bg-primary text-secondary font-black py-5 rounded-xl hover:bg-white transition-all transform hover:-translate-y-1 shadow-xl shadow-primary/20 uppercase tracking-widest text-lg">
              TEKLİF İSTEĞİNİ GÖNDER
            </button>
            <p class="text-center text-gray-500 text-xs mt-6 px-10 leading-relaxed">
              Verileriniz KVKK kapsamında korunmaktadır. Formu göndererek sizinle iletişime geçmemizi kabul etmiş olursunuz.
            </p>
          </div>
        </form>
      </div>

      <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Ücretsiz</div>
          <p class="text-gray-400 text-sm">Keşif ve Tasarım</p>
        </div>
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Hızlı</div>
          <p class="text-gray-400 text-sm">Üretim Süreci</p>
        </div>
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Güvenilir</div>
          <p class="text-gray-400 text-sm">Üretici Garantisi</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
