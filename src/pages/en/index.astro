      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">10+</span>
          <span class="text-gray-500 text-sm">Years Experience</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">1200+</span>
          <span class="text-gray-500 text-sm">Happy Clients</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">2500+</span>
          <span class="text-gray-500 text-sm">Completed Projects</span>
        </div>
        <div>
          <span class="block text-4xl font-heading font-bold text-primary mb-2">100%</span>
          <span class="text-gray-500 text-sm">Satisfaction</span>
        </div>
      </div>
    </div>
