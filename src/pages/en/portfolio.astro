---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { loadImagesManifest } from '../../utils/imagesManifest';
import { buildImageAlt } from '../../utils/imageSeo';

const manifest = loadImagesManifest();
const categories = [];
const seen = new Set();

manifest.forEach(img => {
  if (!seen.has(img.category)) {
    categories.push({
      category: img.category,
      category_tr: img.category_tr,
      category_en: img.category_en,
      sampleImage: img.paths['960'],
      sampleAlt: buildImageAlt({ category: img.category, lang: 'en' }),
      count: manifest.filter(i => i.category === img.category).length
    });
    seen.add(img.category);
  }
});

const title = "Our Portfolio | A2 Advertising References";
const description = "Review our completed signage and advertising projects. Illuminated signs, totems, channel letters, and more.";
---

<Layout title={title} description={description} lang="en">
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          PROJECT <span class="text-primary">PORTFOLIO</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          Explore selected signage applications delivered across different industries.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map(cat => (
          <a href={`/en/services/${cat.category}/`} class="group relative block bg-accent-light rounded-2xl overflow-hidden border border-white/5 shadow-2xl transition-all hover:border-primary/50">
            <div class="aspect-video overflow-hidden">
              <img src={cat.sampleImage} alt={cat.sampleAlt} class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 opacity-80" />
              <div class="absolute inset-0 bg-gradient-to-t from-secondary via-secondary/20 to-transparent"></div>
            </div>
            <div class="p-8 relative">
              <div class="flex justify-between items-center mb-2">
                <h2 class="text-white font-bold text-2xl group-hover:text-primary transition-colors">{cat.category_en}</h2>
                <span class="text-primary font-black text-sm">{cat.count} Images</span>
              </div>
              <p class="text-gray-400 text-sm mb-6">Examine all our projects and application types in this category.</p>
              <div class="text-primary text-xs font-bold uppercase tracking-widest flex items-center gap-2">
                VIEW GALLERY
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</Layout>
