---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import MapEmbed from '../../../components/common/MapEmbed.astro';
import { LOCATIONS, getTotalDistrictCount } from '../../../data/locations';

const districts = await getCollection('districts_en');
// Sort Istanbul districts alphabetically
const sortedDistricts = districts.sort((a, b) => a.data.districtName.localeCompare(b.data.districtName, 'en'));

const totalDistrictCount = getTotalDistrictCount();
const title = "Our Service Areas | A2 Advertising";
const description = `Professional signage and advertising services in ${totalDistrictCount}+ locations across Istanbul and surrounding provinces.`;
---

<Layout title={title} description={description} lang="en">
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          SERVICE <span class="text-primary">AREAS</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          We offer professional signage and advertising solutions with our expert team in {totalDistrictCount}+ locations across Istanbul and surrounding provinces.
        </p>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
        {LOCATIONS.map(province => (
          <div class="glass-card p-4 text-center">
            <div class="text-primary text-2xl font-black mb-1">{province.districts.length}</div>
            <div class="text-white text-sm font-bold">{province.enName}</div>
          </div>
        ))}
      </div>

      <!-- Province Sections -->
      {LOCATIONS.map((province, idx) => (
        <div class="mb-12">
          <div class="flex items-center gap-4 mb-6">
            <h2 class="font-heading font-black text-3xl text-white uppercase">
              {province.enName}
            </h2>
            <span class="text-primary text-sm font-bold px-3 py-1 bg-primary/10 rounded-full">
              {province.districts.length} Districts
            </span>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {province.slug === 'istanbul' ? (
              // Istanbul uses old route structure
              sortedDistricts.map(d => (
                <a href={`/en/service-areas/${d.slug}/`} class="group p-6 glass-card hover:border-primary/50 transition-all transform hover:-translate-y-1 text-center">
                  <span class="block text-lg font-bold text-gray-300 group-hover:text-primary transition-colors">{d.data.districtName}</span>
                  <span class="text-xs text-gray-500 uppercase tracking-widest mt-1 block group-hover:text-gray-400">Signage Services</span>
                </a>
              ))
            ) : (
              // Other provinces use new route structure
              province.districts.map(district => (
                <a href={`/en/service-areas/${province.slug}/${district.slug}/`} class="group p-6 glass-card hover:border-primary/50 transition-all transform hover:-translate-y-1 text-center">
                  <span class="block text-lg font-bold text-gray-300 group-hover:text-primary transition-colors">{district.enName}</span>
                  <span class="text-xs text-gray-500 uppercase tracking-widest mt-1 block group-hover:text-gray-400">Signage Services</span>
                </a>
              ))
            )}
          </div>
        </div>
      ))}

      <div class="mt-16 grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div class="bg-accent-light border border-white/5 rounded-2xl p-8">
          <h2 class="font-heading font-bold text-3xl text-white mb-4">Free Discovery Across Istanbul</h2>
          <p class="text-gray-400 mb-6">
            We provide free on-site discovery for signage, facade, and wayfinding projects across all districts and prepare tailored proposals.
          </p>
          <a href="/en/get-quote/" data-track="lead-click" data-lead-type="quote" data-lang="en" class="inline-flex items-center gap-2 bg-primary text-secondary font-bold px-6 py-3 rounded-lg hover:bg-white transition-all">
            Get a Quote
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
          </a>
        </div>
        <MapEmbed />
      </div>
    </div>
  </div>
</Layout>
