---
import Layout from '../../layouts/Layout.astro';
import { EMAIL, PHONE_NUMBER, PHONE_TEL, WHATSAPP_LINK } from '../../consts';

const title = "Get a Quote | A2 Advertising";
const description = "Get a free discovery and quote for your project. Simply fill out the form for our signage, advertising, and digital printing solutions.";
const formEndpoint = import.meta.env.PUBLIC_FORM_ENDPOINT ?? '';
const hasEndpoint = Boolean(formEndpoint);
const formAction = hasEndpoint ? formEndpoint : `mailto:${EMAIL}`;
const redirectUrl = Astro.site ? new URL('/en/thank-you/', Astro.site).toString() : '/en/thank-you/';
---

<Layout title={title} description={description} lang="en">
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          GET A <span class="text-primary">QUOTE</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block text-balance">
          Let's turn your dream sign into reality. Fill out the form, and we will prepare the most suitable cost and design study for you.
        </p>
      </div>

      <div class="max-w-3xl mx-auto bg-accent-light p-8 md:p-12 rounded-3xl border border-white/5 shadow-2xl relative">
        <div class="absolute -top-6 -right-6 w-24 h-24 bg-primary/20 rounded-full blur-2xl"></div>

        {!hasEndpoint && (
          <div class="mb-8 border border-primary/30 bg-secondary/70 rounded-2xl p-5 text-sm text-gray-300">
            The form provider is not configured yet. You can reach us via <a href={`mailto:${EMAIL}`} class="text-primary hover:underline">email</a> or <a href={WHATSAPP_LINK} data-track="whatsapp" data-lang="en" class="text-primary hover:underline">WhatsApp</a> for a quick response.
            <div class="mt-3 flex flex-wrap gap-3">
              <a href={`tel:${PHONE_TEL}`} data-track="call" data-lang="en" class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">Call: {PHONE_NUMBER}</a>
              <a href={`mailto:${EMAIL}`} class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">Email</a>
              <a href={WHATSAPP_LINK} data-track="whatsapp" data-lang="en" class="px-4 py-2 rounded-full border border-white/10 text-xs uppercase tracking-widest hover:border-primary/60">WhatsApp</a>
            </div>
          </div>
        )}
        
        <form class="space-y-8 relative z-10" data-track="lead-submit" data-lead-type="quote" data-lang="en" action={formAction} method="POST" enctype={hasEndpoint ? 'application/x-www-form-urlencoded' : 'text/plain'}>
          {hasEndpoint && <input type="hidden" name="_redirect" value={redirectUrl} />}
          {hasEndpoint && <input type="hidden" name="_subject" value="New quote request" />}

          <div class="space-y-6">
            <h2 class="text-white font-bold text-xl flex items-center gap-3">
              <span class="w-8 h-8 rounded-full bg-primary text-secondary flex items-center justify-center text-sm">1</span>
              Contact Information
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="full-name" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Full Name</label>
                <input id="full-name" name="fullName" type="text" autocomplete="name" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Full Name" required />
              </div>
              <div>
                <label for="phone" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Phone</label>
                <input id="phone" name="phone" type="tel" autocomplete="tel" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Phone Number" required />
              </div>
            </div>
            <div>
              <label for="email" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Email</label>
              <input id="email" name="email" type="email" autocomplete="email" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Email Address" required />
            </div>
          </div>

          <div class="space-y-6">
            <h2 class="text-white font-bold text-xl flex items-center gap-3">
              <span class="w-8 h-8 rounded-full bg-primary text-secondary flex items-center justify-center text-sm">2</span>
              Project Details
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="service" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Service Type</label>
                <select id="service" name="serviceType" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" required>
                  <option value="">Select Service</option>
                  <option>Illuminated Signage</option>
                  <option>Channel Letters</option>
                  <option>Stainless Steel Letters / Signs</option>
                  <option>Totem Signs</option>
                  <option>Vehicle Wrapping</option>
                  <option>Facade Signage / Composite</option>
                  <option>Others</option>
                </select>
              </div>
              <div>
                <label for="dimensions" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Approx. Dimensions</label>
                <input id="dimensions" name="dimensions" type="text" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Approx. dimensions (e.g. 200x50cm)" />
              </div>
            </div>
            <div>
              <label for="details" class="block text-xs uppercase tracking-widest text-gray-400 mb-2">Additional Details</label>
              <textarea id="details" name="details" rows="4" class="w-full bg-secondary border border-white/10 rounded-lg p-4 text-white focus:border-primary outline-none transition-all" placeholder="Additional details about the sign you want (color, lighting type, etc.)" required></textarea>
            </div>
          </div>

          <div class="pt-4">
            <button type="submit" class="w-full bg-primary text-secondary font-black py-5 rounded-xl hover:bg-white transition-all transform hover:-translate-y-1 shadow-xl shadow-primary/20 uppercase tracking-widest text-lg">
              SEND QUOTE REQUEST
            </button>
            <p class="text-center text-gray-500 text-xs mt-6 px-10 leading-relaxed">
              By submitting the form, you agree to our privacy policy and consent to being contacted by our team.
            </p>
          </div>
        </form>
      </div>

      <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Free</div>
          <p class="text-gray-400 text-sm">Discovery & Design</p>
        </div>
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Fast</div>
          <p class="text-gray-400 text-sm">Production Process</p>
        </div>
        <div class="space-y-2">
          <div class="text-primary font-black text-3xl">Reliable</div>
          <p class="text-gray-400 text-sm">Manufacturer Warranty</p>
        </div>
      </div>
    </div>
  </div>
</Layout>
