---
import Layout from '../../layouts/Layout.astro';
import MapEmbed from '../../components/common/MapEmbed.astro';
import { ADDRESS, ADDRESS_LOCALITY, EMAIL, PHONE_NUMBER, PHONE_TEL } from '../../consts';

const title = "Contact Us | A2 Advertising";
const description = "Contact us for signage and advertising solutions in Istanbul. Fill out our form for a free discovery and quote, or call us.";
---

<Layout
  title={title}
  description={description}
  lang="en"
  whatsappTitle="Contact"
  whatsappLocation={ADDRESS_LOCALITY}
  mobileCtaVariant="contact"
>
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          GET IN <span class="text-primary">TOUCH</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          Ready to talk about your project? Fill out the form and we'll get back to you shortly.
        </p>
      </div>

      <div class="glass-card grid grid-cols-1 lg:grid-cols-2 gap-12 p-8 md:p-12">
        <!-- Contact Form -->
        <div>
          <form id="contact-form" class="space-y-6" data-track="lead-submit" data-lead-type="contact" data-lang="en">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="form-label">Full Name</label>
                <input type="text" name="fullName" autocomplete="name" class="form-input" placeholder="Your Name" required />
              </div>
              <div>
                <label class="form-label">Email</label>
                <input type="email" name="email" autocomplete="email" class="form-input" placeholder="example@mail.com" required />
              </div>
            </div>
            <div>
              <label class="form-label">Phone</label>
              <input type="tel" name="phone" autocomplete="tel" class="form-input" placeholder="+90 5XX XXX XX XX" required />
            </div>
            <div>
              <label class="form-label">Service Type</label>
              <select name="serviceType" class="form-select">
                <option>Illuminated Signage</option>
                <option>Channel Letters</option>
                <option>Totem Signs</option>
                <option>Facade Cladding</option>
                <option>Others</option>
              </select>
            </div>
            <div>
              <label class="form-label">Message</label>
              <textarea rows="4" name="message" class="form-input" placeholder="Write your project details here..."></textarea>
            </div>
            <button type="submit" class="w-full bg-primary text-secondary font-black py-4 rounded-lg hover:bg-white transition-all transform hover:-translate-y-1 shadow-lg shadow-primary/20 uppercase tracking-widest">
              SEND MESSAGE
            </button>
            <p class="text-center text-gray-500 text-xs mt-4 px-6 leading-relaxed">
              By submitting this form, you consent to being contacted by our team regarding your inquiry.
            </p>
          </form>
        </div>

        <!-- Contact Info & Map -->
        <div class="space-y-10">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="glass-card p-6">
              <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center text-primary mb-4">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              </div>
              <h3 class="text-white font-bold mb-2">Phone</h3>
              <a href={`tel:${PHONE_TEL}`} data-track="lead-click" data-lead-type="call" data-lang="en" data-conversion="phone" class="text-gray-400 hover:text-primary transition-colors text-sm">{PHONE_NUMBER}</a>
            </div>
            <div class="glass-card p-6">
              <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center text-primary mb-4">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </div>
              <h3 class="text-white font-bold mb-2">Email</h3>
              <a href={`mailto:${EMAIL}`} class="text-gray-400 hover:text-primary transition-colors text-sm">{EMAIL}</a>
            </div>
            <div class="glass-card p-6">
              <div class="w-12 h-12 bg-primary/20 rounded-xl flex items-center justify-center text-primary mb-4">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              </div>
              <h3 class="text-white font-bold mb-2">Address</h3>
              <p class="text-gray-400 text-sm">{ADDRESS}</p>
            </div>
          </div>

          <MapEmbed />
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import '../../scripts/contact-form';
</script>
