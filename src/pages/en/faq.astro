---
import Layout from '../../layouts/Layout.astro';

const title = "Frequently Asked Questions | A2 Advertising";
const description = "Answers to all your questions about signage production, prices, installation processes, and materials used.";

const breadcrumbs = [
  { name: 'Home', item: '/en/' },
  { name: 'FAQ', item: '/en/faq/' },
];

const faqs = [
  {
    category: "Planning & Process",
    items: [
      { q: "How is the signage production process planned?", a: "Timelines depend on measurements, materials, lighting, and installation conditions. A clear production and installation plan is shared after discovery." },
      { q: "How does discovery and design approval work?", a: "We take on-site measurements and present design options with technical details for approval." }
    ]
  },
  {
    category: "Pricing",
    items: [
      { q: "How are signage prices determined?", a: "Pricing is based on dimensions, material selection, lighting requirements, and installation conditions." },
      { q: "How is a proposal prepared?", a: "Once needs are clarified, we prepare a proposal with material and application options." }
    ]
  },
  {
    category: "Installation, Maintenance & Permits",
    items: [
      { q: "Do you handle installation?", a: "Yes. Our in-house team manages safe on-site installation across Istanbul." },
      { q: "Do you provide maintenance support?", a: "We offer project-specific maintenance and inspection options based on usage conditions." },
      { q: "Do you support legal permits?", a: "We share guidance on municipal and advertising tax requirements; official applications must be made by the property owner or operator." }
    ]
  }
];

const faqItems = faqs.flatMap((cat) =>
  cat.items.map((item) => ({ question: item.q, answer: item.a })),
);
---

<Layout
  title={title}
  description={description}
  lang="en"
  breadcrumbs={breadcrumbs}
  faq={faqItems}
>
  <div class="relative py-24 bg-secondary overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h1 class="font-heading font-black text-4xl md:text-6xl mb-6 text-white uppercase tracking-tight">
          FREQUENTLY ASKED <span class="text-primary">QUESTIONS</span>
        </h1>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg border-l-2 border-primary pl-4 inline-block">
          You can find everything you wonder about your signage and advertising projects here.
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-12">
        {faqs.map(cat => (
          <div>
            <h2 class="font-heading font-bold text-2xl text-white mb-6 border-b border-primary/30 pb-2 uppercase tracking-wide">
              {cat.category}
            </h2>
            <div class="space-y-4">
              {cat.items.map(item => (
                <details class="group bg-accent-light border border-white/5 rounded-xl overflow-hidden shadow-lg transition-all">
                  <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                    <h3 class="font-bold text-gray-200 group-hover:text-primary transition-colors pr-4">{item.q}</h3>
                    <div class="w-8 h-8 rounded-full bg-secondary flex items-center justify-center text-primary group-open:rotate-180 transition-transform">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                    </div>
                  </summary>
                  <div class="px-6 pb-6 text-gray-400 leading-relaxed border-t border-white/5 pt-4">
                    {item.a}
                  </div>
                </details>
              ))}
            </div>
          </div>
        ))}
      </div>

      <div class="mt-20 text-center">
        <p class="text-gray-400 mb-6 italic">Couldn't find the answer you were looking for?</p>
        <a href="/en/contact/" class="bg-primary text-secondary font-black py-4 px-10 rounded-lg hover:bg-white transition-all shadow-lg shadow-primary/20">
          ASK US DIRECTLY
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  summary::-webkit-details-marker {
    display: none;
  }
</style>
